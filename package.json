{
  "name": "loyalty-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@shopify/polaris": "^10.49.1",
    "@shopify/polaris-icons": "^6.15.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.27",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "axios": "^1.4.0",
    "concurrently": "^8.0.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-movable": "^3.0.4",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "react-toggle": "^4.1.3",
    "recharts": "^2.6.2",
    "styled-components": "^6.0.0-rc.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "react-scripts start",
    "serve": "concurrently \"npm start\" \"cd ./backend && npm run build && npm start\"",
    "setup-frontend": "npm install",
    "setup-backend": "cd ./backend && npm install",
    "setup": "npm run setup-frontend && npm run setup-backend",
    "prebuild": "rm -rf ./backend/build && rm -rf ./backend/dist",
    "build": "npm run build-frontend && npm run build-backend",
    "build-frontend": "react-scripts build",
    "build-backend": "cd ./backend && npm run build",
    "postbuild": "mv build ./backend/build",
    "serve:prod": "cd ./backend && npm run start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/react-toggle": "^4.0.3"
  }
}